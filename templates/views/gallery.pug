extends ../layouts/default

//- block intro
//- 	.container
//- 		h1 Gallery
	
block content
	.container
		if galleries.length
			each gallery in galleries
				blockquote.embedly-card(data-card-controls="0").pull-left
					h4: a(href=gallery.video)
				h3= gallery.name
				script(async='', src='//cdn.embedly.com/widgets/platform.js', charset='UTF-8')
				
		else
			h3.text-muted There are no videos yet.
